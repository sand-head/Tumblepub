root = true

[*.{css,rs,js,ts}]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100
indent_style = space
indent_size = 2

[*.{sql,csproj}]
indent_style = space
indent_size = 2

[*.cs]
csharp_style_namespace_declarations = file_scoped:warning