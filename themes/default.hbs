<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{{Title}}</title>
    {{#if Description}}
    <meta name="description" content="{{Description}}" />
    {{/if}}
    <style type="text/css">
      html {
        --accent: #8B42CD;
        --secondary: #36B7C3;
        --tertiary: #FF7245;
        --header-text: #fff;
        --body-text: #000;
        --background-0: #222024;
        --background-1: #BD8DE9;
      }
      body {
        font-family: Verdana, Geneva, Tahoma, sans-serif;
        margin: 0;
        color: var(--body-text);
        background-color: var(--background-0);
      }

      header, footer {
        color: var(--header-text);
        text-align: center;
      }
      main {
        display: grid;
        justify-content: center;
      }
      .post {
        background-color: #fff;
        margin: 16px 0;
        padding: 4px 6px;
        border-bottom: 8px solid var(--secondary);
      }
    </style>
  </head>
  <body>
    <header>
      <h1>{{Title}}</h1>
    </header>
    <main>
      {{#each Posts}}
      <section class="post" data-created-at="{{this.CreatedAt}}">
        {{#each this.Content}}
          {{#if (eq this.Type "Markdown")}}
          <p>{{this.Content}}</p>
          {{/if}}
        {{/each}}
      </section>
      {{/each}}
    </main>
    <footer>
      copyright now bitch
    </footer>
  </body>
</html>